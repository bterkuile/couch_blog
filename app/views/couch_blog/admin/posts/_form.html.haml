= form_for([couch_blog, :admin, @post]) do |f|
  = render 'error_messages', target: @post
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :date
    = f.text_field :date, class: :datepicker
  .field
    = f.label :body
    = f.text_area :body, class: 'editor-big'
  .field.habtm
    = hidden_field_tag 'post[category_ids][]', ''
    - for category in CouchBlog::Category.all
      .category-check-container
        = check_box_tag 'post[category_ids][]', category.id, @post.categories.include?(category), id: "category-checker-#{category.id}"
        = label_tag "category-checker-#{category.id}", category.name
  .acions
    = f.submit t('couch_blog.action.save')
